function formcontent() {
    var prenom = document.forms["reserve"]["formData"];

    if (prenom.value == "") {
        alert("Veuillez entrer 2 caract√®res ou plus pour le champ du nom.");
        prenom.focus();
        return false;
    }
    return true;
}

function bodyform() {
    var first = document.forms["reserve"]["first"];

    if (first.value.length == "1") {
        alert("");
        first.focus();
        return false;
    }
    if (last.value.length == "1") {
        alert("");
        last.focus();
        return false;
    }
    if (quantity.value.length == "") {
        alert("Saisissez au moins 0 tournoi...");
        quantity.focus();
        return false;
    }
    if (location.checkboxInput == "") {
        alert("blablabla...");
        location.focus();
        return false;
    }
}


